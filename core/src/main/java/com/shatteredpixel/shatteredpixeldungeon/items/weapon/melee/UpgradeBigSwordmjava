package com.shatteredpixel.shatteredpixeldungeon.items.weapon.melee;

public class UpgradeBigSword extends MeleeWeapon {
    {
        image = 224;
        tier = 5;
    }

    @Override
    public int min(int lvl) {
        return 90 + lvl * 15;
    }

    @Override
    public int max(int lvl) {
        return 120 + lvl * 20;
    }

    @Override
    public int typicalSTR() {
        return 20;
    }

    @Override
    public String name() {
        return "Улучшенный огромный меч";
    }

    @Override
    public String desc() {
        return "Тяжелый меч с усиленным лезвием. Рассекает врагов пополам.";
    }

    @Override
    public int price() {
        return 1500;
    }
}

